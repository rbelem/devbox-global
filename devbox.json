{
  "packages": [
    "neovim@0.9.0",
    "fzf@0.40.0",
    "starship@1.14.2",
    "git@2.40.1",
    "ripgrep@13.0.0",
    "gh@2.28.0",
    "zoxide@0.9.0",
    "python@3.11.3",
    "python311Packages.pip",
    "tmux@3.3a"
  ],
  "env": {
    "DEVBOX_PREFIX": "$HOME/.local/share/devbox/global/default/profile/"
  },
  "shell": {
    "init_hook": [
      "export DEVBOX_PREFIX=$HOME/.local/share/devbox/global/default/profile",
      ". $VENV_DIR/bin/activate"
    ],
    "scripts": {
      "install-nf": [
        "mkdir -p $HOME/.fonts",
        "curl https://github.com/ryanoasis/nerd-fonts/releases/download/v2.3.3/Hack.zip -s -o $HOME/.fonts/Hack.zip",
        "unzip $HOME/.fonts/Hack.zip -d $HOME/.fonts",
        "rm $HOME/.fonts/Hack.zip",
        "fc-cache -fv"
      ],
      "install-nvchad": [
        "git clone https://github.com/NvChad/NvChad $HOME/.config/nvim",
        "git clone https://github.com/rbelem/nvchad-custom $HOME/.config/nvim/custom"
      ],
      "install-tmux": [
        "git clone https://github.com/gpakosz/.tmux.git",
        "curl https://raw.githubusercontent.com/rbelem/nix-config/main/home-manager/rodrigo/apps/tmux/.tmux.conf.local -s -o $HOME/.tmux.conf.local"
      ],
      "setup-git": [
        "git config --global http.sslVerify false"
      ]
    }
  },
  "nixpkgs": {
    "commit": "f80ac848e3d6f0c12c52758c0f25c10c97ca3b62"
  }
}
